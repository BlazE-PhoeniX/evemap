header.header
  nav.nav.nav--tours
    p.nav__el.nav__el--time APRIL 17, 2021 | 3:30 PM
  .header__logo
    a(href="/")
      img(src="/resources/logo.png" alt="Evemap logo")
  nav.nav.nav--user
    if user
      a.nav__el.nav__el-user
        img.nav__user-img(src=`/resources/user.svg` alt=`user svg`)
        | #{user.name.split(" ")[0]}
      a.nav__el.nav__el--cta(href="/me") Profile
    else
      a.nav__el(href="/login") Log in
      a.nav__el.nav__el--cta(href="/signup") Sign up